<Window x:Class="Tankstelle.GUI.ChoseGasPump"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tankstelle.GUI"
        mc:Ignorable="d"
        Title="ChoseGasPump" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">Wählen Sie eine Zapfsäule</TextBox>
        <ListView Grid.Row="1" ItemsSource="{Binding}" Name="_livZapfsauulen">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Zapfsäule "></Label>
                        <Label Content="{Binding Path=GasPumpNumber}"></Label>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Grid.Row="2" Width="80" Height="30" HorizontalAlignment="Right" Margin="5" Name="_btnWaehlen" Click="_btnWaehlen_Click">Wählen</Button>
    </Grid>
</Window>
